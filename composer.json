{
    "name": "floor9design/json-api-formatter",
    "type": "library",
    "description": "A set classes that allow for creating JSON API compliant objects",
    "keywords": [
        "floor9design",
        "jsonapi",
        "rest",
        "api"
    ],
    "homepage": "https://github.com/floor9design-ltd/json-api-formatter",
    "license": "MIT",
    "authors": [
        {
            "name": "Rick Morice",
            "email": "rick@floor9design.com",
            "homepage": "https://floor9design.com",
            "role": "Developer"
        }
    ],
    "require": {
        "ext-json": "*",
        "php" : ">=7.4"
    },
    "require-dev": {
        "floor9design/testing-tools": "^1.3",
        "mockery/mockery": "dev-master",
        "phpstan/phpstan": "^1.0.0",
        "phpunit/phpunit": "^10|^9"
    },
    "autoload": {
        "psr-4": {
            "Floor9design\\JsonApiFormatter\\": "src",
            "Floor9design\\JsonApiFormatter\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    }
}
